{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "wordpress",
    "rules": {
        "yoda": [2, "never"],
        "prefer-const": ["warn", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
        }],
        "no-unused-vars": ["warn", {
            "vars": "all",
            "args": "after-used",
            "ignoreRestSiblings": false
        }]
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}
