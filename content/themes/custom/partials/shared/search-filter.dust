{#ApiSearchTerms}
    {?embed}
        <div class="search-filter embed-filter">
    {:else}
        <form class="search-filter">
    {/embed}

    {?embed}
        <label>
            <p>{Header.S.filter_by_age}</p>
            <div class="search-input-container">
                <input type="search" name="s" value="{Term}" placeholder="Etsi" title="Etsi sivulta">
                <i class="icon-search search-icon"></i>
            </div>
        </label>
    {:else}
        <h3>
            <i class="icon-filter" aria-hidden="true"></i>
            {Header.S.filter_search}
        </h3>

        <label>
            <p>{Header.S.by_agegroup}</p>
            <div class="search-input-container">
                <input type="search" name="s" value="{Term}" placeholder="Etsi" title="Etsi sivulta">
                <i class="icon-search search-icon"></i>
            </div>
        </label>
    {/embed}

    {>"search-and-or" name="base_relation" /}

    {>"agegroup-filters" embed="false" /}

    {?embed}
        <button class="toggle-global-filters">
            <i class="icon-cog"></i>
            {Header.S.more_filters}
        </button>
    {:else}
        <p>{Header.S.other_filters}</p>
    {/embed}

    {>"filters" prefix="global" /}

    {?embed}
        </div>
    {:else}
        </form>
    {/embed}
{/ApiSearchTerms}
